<section class="min-vh-100 d-flex align-items-center justify-content-center position-relative overflow-hidden">
  <!-- Aurora background handled globally -->
  <div class="container py-5 position-relative">

    <div class="card glassy shadow-lg border-0 rounded-4 overflow-hidden elevate">
      <!-- === Header / Profile === -->
      <div class="p-5 text-center border-bottom border-secondary position-relative"
           style="background: radial-gradient(circle at 50% 0%, rgba(29,155,240,0.25), transparent 80%);">
        <div class="avatar-glow mx-auto mb-3">
          <img src="<%= user.profile_image_url %>" 
               alt="@<%= user.username %>"
               class="rounded-circle shadow border border-3 border-light"
               width="90" height="90"
               style="object-fit: cover;">
        </div>
        <h3 class="fw-bold text-gradient mb-0">@<%= user.username %></h3>
        <div class="text-secondary small mt-1">User ID: <%= user.id %></div>
      </div>

      <!-- === Info Alert === -->
      <div class="alert alert-info text-center rounded-0 mb-0 small">
        <i class="fa-solid fa-circle-info me-1"></i>
        Pastikan akun kamu memiliki izin menulis & menghapus tweet.
      </div>

      <!-- === Action Buttons === -->
      <div class="p-4 text-center">
        <button id="btnDeleteAll" class="btn btn-danger btn-lg px-4 pulse shadow-sm me-2" disabled>
          <i class="fa-solid fa-trash me-2"></i> Hapus Semua Tweet
        </button>
        <button id="btnCancel" class="btn btn-outline-light btn-lg px-4" disabled>
          <i class="fa-solid fa-ban me-2"></i> Batalkan
        </button>
      </div>

      <!-- === Tweet Table Section === -->
      <div class="p-4 bg-transparent">
        <div class="d-flex justify-content-between align-items-center flex-wrap mb-4">
          <h5 class="fw-bold mb-2 text-gradient"><i class="fa-brands fa-x-twitter me-2"></i> Daftar Tweet</h5>
          <div class="d-flex gap-2">
            <button id="btn-load-more" class="btn btn-primary btn-sm shadow-sm">
              <i class="fa-solid fa-rotate me-1"></i> Load More
            </button>
            <button id="btn-refresh" class="btn btn-outline-secondary btn-sm shadow-sm">
              <i class="fa-solid fa-arrows-rotate me-1"></i> Refresh
            </button>
          </div>
        </div>

        <!-- === Stats === -->
        <div class="row g-3 text-center mb-4">
          <div class="col-6 col-md-3">
            <div class="glassy p-3 rounded-3 small">
              <div class="text-secondary">Loaded Tweets</div>
              <div id="stat-loaded" class="fs-5 fw-bold">0</div>
            </div>
          </div>
          <div class="col-6 col-md-3">
            <div class="glassy p-3 rounded-3 small">
              <div class="text-secondary">Has More?</div>
              <div id="stat-has-more" class="fs-5 fw-bold">-</div>
            </div>
          </div>
        </div>

        <!-- === Tweets Table === -->
        <div class="table-responsive rounded-3 glassy p-2 shadow-sm">
          <table id="tweetsTable" class="table table-hover table-borderless align-middle mb-0">
            <thead>
              <tr class="border-bottom border-secondary">
                <th>ID</th>
                <th>Tanggal</th>
                <th>Konten</th>
                <th>Likes</th>
                <th>Retweets</th>
                <th>Replies</th>
                <th>Quotes</th>
                <th class="text-center">Aksi</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>

        <div class="text-center mt-4 small text-secondary">
          <i class="fa-solid fa-shield-halved me-1"></i>
          Aman â€” data hanya disimpan di sesi browser kamu.
        </div>
      </div>
    </div>
  </div>

  <!-- Subtle moving glow effect background -->
  <div class="position-absolute top-0 start-0 w-100 h-100" 
       style="background: radial-gradient(circle at 70% 30%, rgba(255,255,255,0.06), transparent 70%);
              pointer-events: none; filter: blur(100px); animation: floatGlow 14s ease-in-out infinite alternate;">
  </div>
</section>

<style>
@keyframes floatGlow {
  0% { transform: translateY(0px) scale(1); opacity: 0.6; }
  100% { transform: translateY(25px) scale(1.05); opacity: 0.8; }
}
</style>
