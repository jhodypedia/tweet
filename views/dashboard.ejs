<section class="container py-5" data-animate="fade-up">
  <div class="card glassy p-4 shadow-lg border-0">
    <div class="d-flex align-items-center mb-4">
      <img src="https://unavatar.io/x/<%= user.username %>" class="rounded-circle me-3" width="70" height="70">
      <div>
        <h4 class="fw-bold mb-1">@<%= user.username %></h4>
        <div class="text-muted small">ID: <%= user.id %></div>
      </div>
    </div>

    <div class="alert alert-info text-center">
      <i class="fa-solid fa-circle-info me-1"></i> Pastikan akun kamu memiliki izin menulis & menghapus tweet.
    </div>

    <div class="text-center my-4">
      <button id="btnDeleteAll" class="btn btn-danger btn-lg px-4 shadow-sm">
        <i class="fa-solid fa-trash me-2"></i> Hapus Semua Tweet
      </button>
      <button id="btnCancel" class="btn btn-outline-secondary btn-lg ms-2 px-4" disabled>
        <i class="fa-solid fa-ban me-2"></i> Batalkan
      </button>
    </div>

    <div class="mt-5 text-center small text-muted">
      <i class="fa-solid fa-shield-halved me-1"></i> Aman â€” data disimpan di sesi browser kamu.
    </div>
  </div>
</section>
